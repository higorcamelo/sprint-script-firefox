{
  "manifest_version": 2,
  "name": "SprintScript",
  "version": "1.0",
  "description": "Substitua atalhos de texto por links e frases completas com confirmação.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sprintscript@seu-email.com",
      "strict_min_version": "57.0"
    }
  }
}
