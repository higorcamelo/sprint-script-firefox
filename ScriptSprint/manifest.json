{
  "manifest_version": 2,
  "name": "SprintScript",
  "version": "1.0",
  "description": "Extensão para substituição de atalhos de texto",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "sprintscript@exemplo.com",
      "strict_min_version": "42.0"
    }
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}