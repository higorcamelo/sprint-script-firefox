{
  "manifest_version": 2,
  "name": "SprintScript",
  "version": "1.0",
  "description": "Substitui atalhos de texto por trechos salvos",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "sprintscript@exemplo.com"
    }
  }
}
